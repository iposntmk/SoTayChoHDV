rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isAdmin() {
      return isAuthenticated() &&
             exists(/databases/$(database)/documents/admin_allowlist/$(request.auth.uid));
    }

    function isOwner(ownerId) {
      return isAuthenticated() && request.auth.uid == ownerId;
    }

    // Providers collection
    match /providers/{providerId} {
      // Public read for approved providers
      allow read: if resource.data.isApproved == true;

      // Authenticated users can create providers
      allow create: if isAuthenticated() &&
                      request.resource.data.ownerId == request.auth.uid &&
                      request.resource.data.createdAt == request.time &&
                      request.resource.data.updatedAt == request.time &&
                      request.resource.data.createdBy.uid == request.auth.uid &&
                      request.resource.data.updatedBy.uid == request.auth.uid;

      // Owners can update their own providers
      allow update: if isOwner(resource.data.ownerId) &&
                      request.resource.data.ownerId == resource.data.ownerId &&
                      request.resource.data.updatedAt == request.time &&
                      request.resource.data.updatedBy.uid == request.auth.uid;

      // Owners can delete their own providers
      allow delete: if isOwner(resource.data.ownerId);
    }

    // Master data collections - Admin only
    match /master_provinces/{provinceId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }

    match /master_provider_kinds/{kindId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }

    match /master_room_types/{roomTypeId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }

    // Admin allowlist - Admin only
    match /admin_allowlist/{userId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }
  }
}
